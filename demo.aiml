<?xml version="1.0" encoding="UTF-8"?>
<aiml versions="1.0.1" encoding="UTF-8">
    <category>
        <pattern>* LIKE *</pattern>
        <template>
            <star index="1"/> like <star index="2"/> indeed, what do you do with <star index="2"/>?
        </template>
    </category>
    <category>
        <pattern>I *</pattern>
        <template>I <star/> too</template>
    </category>
    <category>
        <pattern>TELL ME WHAT IS ROBOT</pattern> <!-- Do not insert "?" in the end this pattern -->
        <template>It is me :D</template>
    </category>

    <!-- SRAI usage -->
    <category>
        <pattern>TELL ME WHAT IS LIFE</pattern>
        <template>Fight</template>
    </category>
    <category>
        <pattern>WHAT IS *</pattern>
        <template>
            <srai>TELL ME WHAT IS <star/></srai>
        </template>
    </category>
    <category>
        <pattern>BYE</pattern>
        <template>Good bye! <get name="name"/></template>
    </category>
    <category>
        <pattern>BYE *</pattern>
        <template>
            <srai>BYE</srai>
        </template>
    </category>
    <category>
        <pattern>CONF</pattern>
        <template>COMPILE</template>
    </category>
    <category>
        <pattern>BUILD</pattern>
        <template>
            <srai>CONF</srai>
        </template>
    </category>
    <category>
        <pattern>MAKE *</pattern>
        <template>"MAKE" found</template>
    </category>
    <category>
        <pattern>* MAKE *</pattern>
        <template><srai>MAKE</srai></template>
    </category>
        <category>
        <pattern>MAKE *</pattern>
        <template><srai>MAKE</srai></template>
    </category>
    <category>
        <pattern>* MAKE</pattern>
        <template><srai>MAKE <star/></srai></template>
    </category>

    <!--RANDOM responces -->
    <category>
        <pattern>* HOT</pattern>
        <template>
            <random>
                <li>Eat ice</li>
                <li>Sleep naked</li>
                <li>Buy a fan</li>
                <li>Drink cola</li>
                <li>Run fast</li>
            </random>
        </template>
    </category>

    <!-- SET, GET -->
    <category>
        <pattern>REMEMBER *</pattern>
        <template>
            I remembered <set name="var"><star/></set>
        </template>
    </category>
    <category>
        <pattern>WHAT DID I SAY</pattern>
        <template>You said "<get name="var"/>"</template>
    </category>
    <category>
        <pattern>HI I AM *</pattern>
        <template>I will remember you <set name="name"><star/></set></template>
    </category>
    <category>
        <pattern>HI *</pattern>
        <template><srai>BYE</srai></template>
    </category>

    <!-- THAT WORKING only if "that" text is capitalized -->
    <category>
        <pattern>WHAT ABOUT BEER</pattern>
        <template>You like it?</template>
    </category>
    <category>
        <pattern>YES</pattern>
        <that>YOU LIKE IT</that>
        <template>True, beer is great</template>
    </category>
    <category>
        <pattern>NO</pattern>
        <that>YOU LIKE IT</that>
        <template>Too bad</template>
    </category>
    <category>
      <pattern>WHAT ABOUT MOVIES</pattern>
      <template>Do you like comedy movies</template>
   </category>
   <category>
      <pattern>YES</pattern>
      <that>DO YOU LIKE COMEDY MOVIES</that>
      <template>Nice, I like comedy movies too.</template>
   </category>
   <category>
      <pattern>NO</pattern>
      <that>DO YOU LIKE COMEDY MOVIES</that>
      <template>Ok! But I like comedy movies.</template>
   </category>

    <!-- TOPIC WORKS if topic name is capitalized in topic tag-->
    <category>
        <pattern>LETS TALK ABOUT *</pattern>
        <template>Ok!
            <think>
                <set name="topic"><star/></set>
            </think>
        </template>
    </category>
    <topic name="BEER">
        <category>
            <pattern>WHAT TYPES DO YOU LIKE</pattern>
            <template>I like Paulaner!</template>
        </category>
    </topic>
    <topic name="FOOD">
        <category>
            <pattern>WHAT TYPES DO YOU LIKE</pattern>
            <template>I like donuts!</template>
        </category>
    </topic>
    <topic name="BOOKS">
        <category>
            <pattern>WHAT TYPES DO YOU LIKE</pattern>
            <template>I like fairy tales!</template>
        </category>
    </topic>
    <category>
        <pattern>WHAT TYPES DO YOU LIKE</pattern>
        <template>What do you mean?</template>
    </category>

    <!-- THINK -->
    <category>
        <pattern>LETS THINK</pattern>
        <template>
            <think><set name="thinking">I am thinking...</set></think>
        </template>
    </category>
    <category>
        <pattern>* think *</pattern>
        <template><get name="thinking"/></template>
    </category>

    <!-- CONDITION, capitalize var values!-->
    <category>
        <pattern>HOW ARE YOU</pattern>
        <template>
            <think><set name="mood">COOL</set></think>
            <condition name="mood" value="HAPPY">I am happy, yeah!</condition>
            <condition name="mood" value="COOL">I am very cool</condition>
            <condition name="mood" value="BAD">I am bad</condition>
        </template>
    </category>

    <!-- SHELL commands -->
    <category>
        <pattern>SHELL</pattern>
        <template>It's <system>python2 shell.py</system></template>
    </category>
</aiml>
